{
  "tasks": {
    "dev": "deno run -A npm:astro dev",
    "build": "deno run -A npm:astro build",
    "preview": "deno run -A npm:astro preview",
    "patch": "deno run --allow-read --allow-write scripts/patch-adapter.ts",
    "db:push": "npx drizzle-kit push",
    "db:seed": "deno run --allow-read --allow-write --allow-env=DB_PATH src/db/seed.ts"
  },
  "unstable": ["fmt-component"],
  "fmt": {
    "indentWidth": 2,
    "useTabs": false
  }
}

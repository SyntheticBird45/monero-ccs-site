---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/global.css";
import "@/styles/external-links.css";

import "@fontsource-variable/dm-sans";
import dmSansFont from "@fontsource-variable/dm-sans/files/dm-sans-latin-wght-normal.woff2?url";

interface Props {
  title?: string;
}

const { title = "Monero CCS" } = Astro.props;
const fullTitle = title === "Monero CCS"
  ? title
  : `${title} | Monero CCS`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={dmSansFont}
      crossorigin="anonymous"
    />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />

    <title>{fullTitle}</title>
    <slot name="head" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    min-height: 100vh;
    font-family: "DM Sans Variable", sans-serif;
    background: var(--bg-color);
    color: var(--text-primary);
    display: flex;
    flex-direction: column;
  }

  main {
    display: flex;
    flex-direction: column;
    gap: var(--space-4xl);
    padding: var(--page-top-margin) var(--mobile-padding-inline)
      var(--space-2xl);
    margin: 0 auto;
    width: 100%;
    max-width: var(--content-max-width);
    flex: 1 0 auto;
    box-sizing: border-box;
  }

  @media (width >= 1200px) {
    main {
      padding-inline: var(--desktop-padding-inline);
    }
  }
</style>

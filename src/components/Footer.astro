---
const repoLinks = [
  {
    label: "Frontend Repo",
    href: "https://repo.getmonero.org/monero-project/ccs-front",
  },
  {
    label: "Backend Repo",
    href: "https://repo.getmonero.org/monero-project/ccs-back",
  },
  {
    label: "Proposals Repo",
    href: "https://repo.getmonero.org/monero-project/ccs-proposals",
  },
];
---

<footer class="footer">
  <div class="footer-inner">
    <nav class="links" aria-label="Footer navigation">
      <ul class="link-list">
        {
          repoLinks.map(({ label, href }) => (
            <li>
              <a {href} target="_blank" rel="noopener noreferrer external">
                {label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</footer>

<style>
  .footer {
    background: var(--footer-color);
    margin-top: auto;
  }

  .footer-inner {
    padding: var(--space-4xl) var(--mobile-padding-inline);
    max-width: var(--content-max-width);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    align-items: center;
    text-align: center;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md) var(--space-xl);
    justify-content: center;

    a {
      color: var(--heading-color);
      text-decoration: none;
      display: flex;
      align-items: center;
      width: fit-content;

      &:hover {
        text-decoration: underline;
      }
    }
  }

  @media (width >= 1200px) {
    .footer-inner {
      padding-inline: var(--desktop-padding-inline);
    }
  }
</style>
